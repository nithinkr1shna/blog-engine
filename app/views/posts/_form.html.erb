<%= form_for @post do |f| %>

 <% if @post.errors.any? %>
  <div class="errors">
   <p><h3><%= pluralize(@post.errors.count, "error") %> prevented the post from posting </h3></p>
      <% @post.errors.full_messages.each do |msg|%>
        <ul>
          <li><%= msg %></li>
       </ul>
	<% end %>
  </div>
 <% end %>
  
<p>
  <h3><%= f.label :title  %><br></h3>
  <%= f.text_field :title, :class =>'title'  %>
</p>
<p>
  <h4> <%= f.label :body %></h4><br>
  <%= f.text_area :body, :class =>'text_field_body' %>
</p>

<p >
  <%= f.submit 'Submit', :class =>'submit_button' %>
</p>

<% end %>
